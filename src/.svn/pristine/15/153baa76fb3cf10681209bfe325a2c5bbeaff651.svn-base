            }
        }

    }

    private static void newGame(BufferedReader in) throws IOException {

        Player player = null;
        String name = null;
        String character;

        // Choix du nom
        System.out.println();
        System.out.println("Quel est votre nom, guerrier ?");
        name = in.readLine();
        System.out.println();

        // Choix du personnage
        while(true) {

            System.out.println("Choisissez votre classe :");
            System.out.println("1- Jedi\n2- Sith\n3- Bounty Hunter \n4- Imperial Agent\n5- Mercenary\n6- Jawa");
            System.out.println();
            character = in.readLine();
            System.out.println();

            switch (character) {
                case "1":
                    player = Player.getInstance(HeroTypes.JEDI, name);
                    break;

                case "2" :
                    player = Player.getInstance(HeroTypes.SITH, name);
                    break;

                case "3" :
                    player = Player.getInstance(HeroTypes.BOUNTYHUNTER, name);
                    break;

                case "4" :
                    player = Player.getInstance(HeroTypes.IMPERIALAGENT, name);
                    break;

                case "5" :
                    player = Player.getInstance(HeroTypes.MERCENARY, name);
                    break;

                case "6" :
                    player = Player.getInstance(HeroTypes.JAWA, name);
                    break;

                case "exit":
                    return;
            }
            break;
        }

        System.out.println("Bienvenue à toi, " + player.getPlayerClass() + " " + player.getPlayerName() + ".");



