	public void levelup() {
		lvl += 1;
		xpMax = (int) (4 * Math.pow(lvl, 3)) / 5;
		hpMax *= 1.5;
		hp = hpMax;
		def *= 1.5;
		power *= 1.5;
		force *= 1.5;
		intelligence *= 1.5;
	}
	
